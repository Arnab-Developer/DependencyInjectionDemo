<Window x:Class="ApoUtilityPrototype1.WpfApp.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="200" Width="300">
    <Grid>
        <Label Content="User Name" Height="27" HorizontalAlignment="Left" Margin="37,40,0,0" Name="LblUserName" VerticalAlignment="Top" Width="69" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="112,40,0,0" Name="TxtUserName" VerticalAlignment="Top" Width="120" />
        <Label Content="Password" Height="28" HorizontalAlignment="Left" Margin="37,73,0,0" Name="LblPassword" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="112,73,0,0" Name="TxtPassword" VerticalAlignment="Top" Width="120" />
        <Button Content="Login" Height="23" HorizontalAlignment="Left" Margin="157,102,0,0" Name="BtnLogin" VerticalAlignment="Top" Width="75" Click="BtnLogin_Click" />
        <Button Content="Create User" Height="23" HorizontalAlignment="Left" Margin="22,130,0,0" Name="BtnCreateUser" VerticalAlignment="Top" Width="75" Click="BtnCreateUser_Click" />
    </Grid>
</Window>
